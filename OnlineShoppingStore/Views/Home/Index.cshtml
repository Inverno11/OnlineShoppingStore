<div class="olContent f1"><h2 style="color:black">Search Product/Category</h2></div>
<form id="searchProducts" method="get" action="@Url.Action("ProductList","Home")">


    <div class="olSearch fr">
        <input type="text" placeholder="Enter Keyword" name="search" id="search" class="inputComn houseText form-control" />
        <div class="searchIcon">
            <button type="submit" class="searchBtn" id=" =searchBtn">
                Search
            </button>
        </div>
    </div>

</form>

<div class="row">
    <div class="col-md-12">
        <div class="page-header">
            <h2>Our Producrs <small>trends products</small></h2>
        </div>
    </div>
</div>

<div id="products">

    <div class="row product-container">
        @foreach (var item in Model.ListOfProducts)
        {
            <div class="col-md-3 col-sm-3 col-xs-6" style="margin-bottom:8px">
                <div class="thumbnail product-item" style="height:300px">
                    <img class="img-responsive" title="Click to View Product detail"
                         style="cursor:pointer;height:160px;width:100%"
                         src="~/Uploads/Images/@item.ProductImage" />
                    <div class="caption">
                        <h4>@item.ProductName</h4>
                        <p style="font-size:medium">@item.Price $.</p>
                        <p>Available</p>
                        <div class="product-item-badge">New</div>
                        @Html.ActionLink("Find out", "ProductDetails", new { id = item.ProductId }, new { @class = "button-33" })

                    </div>
                </div>
            </div>
        }
    </div>

    <div class="container">
        @Html.PagedListPager(Model.ListOfProducts, page => Url.Action("Index", new { page, search = Request.QueryString["search"] }))

    </div>
</div>

